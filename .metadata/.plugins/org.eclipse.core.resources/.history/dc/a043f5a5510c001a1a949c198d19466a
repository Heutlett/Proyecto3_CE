package cr.ac.tec.graph.api.util;

import cr.ac.tec.graph.api.dto.Graph;

public class MatrizAdyacencia {

	public static String[][] generarMatriz(Graph g){
		
		String [][] matriz = new String [g.getNodes().size()][g.getNodes().size()];
		
		for(int i = 0; i < g.getEdges().size(); i++) {
			
			int fila = Integer.valueOf(g.getEdges().get(i).getStart().substring(1, g.getEdges().get(i).getStart().length()));
			int columna = Integer.valueOf(g.getEdges().get(i).getEnd().substring(1, g.getEdges().get(i).getEnd().length()));
			
			matriz[fila][columna] = ""+g.getEdges().get(i).getWeight());
			
		}
		
		
		
		
		return matriz;
		
	}
	
}
