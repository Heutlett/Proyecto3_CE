		graph.agregarRuta("n3", "n3", 0);
		graph.agregarRuta("n3", "n4", 15);
		graph.agregarRuta("n3", "n5", 999999999);
		graph.agregarRuta("n3", "n6", 999999999);
		graph.agregarRuta("n3", "n7", 999999999);
		

		
		graph.agregarRuta("n4", "n0", 999999999);
